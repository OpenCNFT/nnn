# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[COMMIT_EDITMSG]
max_line_length = 72

[Makefile]
indent_style = tab
indent_size = unset

[**.go]
indent_style = tab
indent_size = 8
tab_width = 8

# Test file with important trailing whitespaces in test data
[internal/gitaly/service/diff/raw_range_diff_test.go]
trim_trailing_whitespace = false

[**.{md,proto,yml}]
indent_style = space
indent_size = 2
